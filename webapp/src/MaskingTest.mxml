<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" minWidth="955" minHeight="600">

	<fx:Script>
		<![CDATA[
			protected function group1_mouseDownHandler(event:MouseEvent):void
			{
				masker.visible = true;
				main.mask = masker;
				moveEff.play();
		
			}
		]]>
	</fx:Script>

	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	
	<s:Group id="main"  width="100%" height="100%" mouseDown="group1_mouseDownHandler(event)" maskType="alpha">
		<s:Rect width="100%" height="100%">
			<s:fill>
				<s:SolidColor  color="0xff0000" />
			</s:fill>
		</s:Rect>
		<s:Group id="panel"  y="-400"  width="400" height="400" horizontalCenter="0">
			<s:Rect width="100%" height="100%">
				<s:fill>
					<s:SolidColor color="0"/>
				</s:fill>
			</s:Rect>
		</s:Group>	
	</s:Group>
	<s:Group id="masker" visible="false"  width="400" height="400" horizontalCenter="0">
		<s:Rect width="100%" height="100%">
			<s:fill>
				<s:SolidColor color="0"/>
			</s:fill>
		</s:Rect>
	</s:Group>
	
	<fx:Declarations>
		<s:Move yTo="0" duration="1500" target="{panel}" id="moveEff" />
	</fx:Declarations>

</s:Application>
