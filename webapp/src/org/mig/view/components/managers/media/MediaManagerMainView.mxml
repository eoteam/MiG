<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml"
		 xmlns:media="org.mig.view.components.managers.media.*"
		 backgroundColor="0x111111" backgroundAlpha=".95"
		 width="100%" height="100%">

	<!--Title Bar-->
	<mx:HBox width="100%" id="header" clipContent="false" verticalAlign="middle" horizontalGap="2">
		<mx:Text styleName="boldCopy" left="-3" bottom="-5" width="100%" text="Media Manager"/>
		<mx:Spacer width="100%"/>
		<mx:Button id="closeButton" styleName="defaultButton" label="Close" click="this.visible=false"/>
	</mx:HBox>
	<mx:Spacer height="4" />
	<mx:HRule width="100%" strokeWidth="1" strokeColor="#999999" />
	<media:MediaManagerView width="100%" height="100%" id="managerView" visible="{this.visible}" />	
</mx:VBox>
