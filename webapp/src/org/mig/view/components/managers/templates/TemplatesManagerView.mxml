<?xml version="1.0" encoding="utf-8"?>
<s:SkinnableContainer
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx" backgroundColor="0x121212"
	width="100%" height="100%" xmlns:controls="org.mig.view.controls.*" xmlns:fe="com.fxcomponents.controls.fe.*">
	

	<s:layout>
		<s:VerticalLayout />
	</s:layout>
	<!--Title Bar-->
	<s:HGroup width="100%" id="header" verticalAlign="middle" gap="2" clipAndEnableScrolling="false">
		<s:Label styleName="boldCopy"  width="100%" text="Templates Manager" />
		<s:Rect width="100%"/>
		<s:Button id="closeButton" styleName="defaultGrayButton" label="Close" click="this.visible=false"/>
	</s:HGroup>
	<s:Rect height="4" />
	<s:Rect width="100%" height="1">
		<s:fill>
			<s:SolidColor color="#999999" />
		</s:fill>
	</s:Rect>
	
	<fe:ExtendedDividedBox direction="horizontal" width="100%" height="100%" 
    liveDragging="false" clipContent="false"
    barFillColors="[0xFFFFFF,0xFFFFFF]" 
    dividerThickness="1" dividerSkin="com.fxcomponents.skins.MainDividerSkin">
	
	<s:VGroup width="25%" height="100%">
		<s:HGroup id="toolBar">
			<controls:IconButton width="34" height="22" styleName="grayIconButton" 
			icon="@Embed(source='/migAssets/library.swf#fileActions')"  id="actionButton" />
		</s:HGroup>
		<controls:MiGList width="100%" height="100%" id="templateList" headerText="Templates" labelField="name" sortField="name">
			<controls:layout>
				<s:VerticalLayout gap="2" clipAndEnableScrolling="true"/>
			</controls:layout>
			<controls:itemRenderer>
				<fx:Component>
					<s:ItemRenderer width="100%" autoDrawBackground="true" focusEnabled="true" height="24">
						<s:Label verticalCenter="0" text="{data.name}" styleName="boldCopy" width="100%" paddingLeft="4"/>
					</s:ItemRenderer>
				</fx:Component>
			</controls:itemRenderer>
		</controls:MiGList>		
	</s:VGroup>
	<s:VGroup width="75%" height="100%" id="templateDetailView">
		<s:VGroup width="100%" id="cfHolder"/>
		<s:Button id="addFieldButton" label="New Field +" />
	</s:VGroup>
	</fe:ExtendedDividedBox>
</s:SkinnableContainer>
