<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" minWidth="955" minHeight="600" creationComplete="application1_creationCompleteHandler(event)">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			import mx.rpc.events.ResultEvent;
			
			import org.mig.services.*;
			protected function application1_creationCompleteHandler(event:FlexEvent):void
			{
				clrService.send();
			}


			protected function httpservice1_resultHandler(event:ResultEvent):void
			{
				var  result:Array = event.result.toString().split('\n');
				for each(var c:String in result) {
					var color:Number = Number(c);
					trace("('#"+color.toString(16)+"'),");
				}
			}

		]]>
	</fx:Script>
	<fx:Declarations>
		<s:HTTPService url="colors.txt" result="httpservice1_resultHandler(event)" id="clrService" />
	</fx:Declarations>
</s:Application>
